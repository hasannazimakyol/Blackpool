				<!--			<Text text="{/BirthDate}"></Text>-->
				<!--		</HBox>-->
				<!--	</HBox>-->
					
				<!--</Vbox>-->
			</HBox>
		</content>
		<beginButton>
			<Button press=".onCloseDialog" type="Back"/>
			<!--text="{i18n>addDialogClose}"-->
		</beginButton>
		<endButton>
			<Button text="{i18n>addDialogSave}" press=".onSave" type="Accept"/>
		</endButton>
	</Dialog>
