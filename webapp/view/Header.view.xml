<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="mbis.Blackpool.controller.Header"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<VBox class="navigationExamples">
		<Panel>
			<FlexBox
				class="ne-flexbox2"
				justifyContent="SpaceAround"
				alignItems="Center">
				<Image src="{/team/imageUrl}" width="100px" height="100px" class="sapUiMediumMarginTopBottom"/>
				<FlexBox direction="Column">
					<Text text="Club Name: {/team/name}"></Text>
					<Text text="Country: {/team/country}"></Text>
					<Text text="League: {/team/league}"></Text>
					<Text text="Foundation Year: {/team/foundationYear}"></Text>
				</FlexBox>
			</FlexBox>
		</Panel>
	</VBox>
</mvc:View>